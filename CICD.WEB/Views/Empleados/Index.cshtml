
<h3 class="mt-4">Empleados</h3>
<div class="row">
    <div class="p-2 text-end">
        <a class="btn btn-primary" asp-controller="Empleados" asp-action="Nuevo"><i class="fa-solid fa-plus"></i> Nuevo empleado</a>
    </div>
</div>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Empleados encontrados
    </div>
    <div class="card-body">
        <div id="divResultado" class="table-concept"></div>
    </div>
</div>
<script type="text/x-jsrender" id="tmpResultado">
    {{if Empleados.length>0}}
    <table id="tlbEmpleados" style="width:100%" >
         <thead>
                <tr>
                    <th style="width: 110px !important"></th>
                    <th>Nombre completo</th>
                    <th>Fecha nacimiento</th>
                    <th>Sexo</th>
                    <th>Cargo</th>
                    <th>Haber básico</th>
                </tr>
            </thead>
        <tbody>
            {{for Empleados}}
                <tr id="{{>Id}}">
                    <td style="width: 110px !important" class="demo">
                        <a class="btn btn-primary" href="Empleados/Editar/{{>Id}}"><i class="fa fa-pencil"></i></a>
                        <a class="btn btn-danger eliminar"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                    <td class="nombreEmpleado">{{>NombreCompleto}}</td>
                    <td>{{>FechaNacimiento}}</td>
                    <td>{{>Sexo}}</td>
                    <td>{{>Cargo}}</td>
                    <td>{{>HaberBasico}}</td>
                </tr>
            {{/for}}
        </tbody>
    </table>
    {{else}}
    <div class="alert alert-warning" role="alert">No se encontraron empleados registrados.</div>
    {{/if}}
</script>

@section Scripts
{
    <script src="@Url.Content("~/scripts/js/empleados.js")"></script>
}
